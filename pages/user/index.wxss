page{
  background-color: #fff;
}
.user_info_wrap{
height: 45vh;
position: relative;
}
.user_img_wrap{
position: relative;
}
.user_bg{
  height: 45vh;
  filter: blur(8rpx);
}
.user_info{
position: absolute;
left: 50%;
transform: translate(-50%);
top:20%;
text-align: center;
}
.user_icon{
width: 180rpx;
height: 180rpx;
border-radius: 50%;
}
.user_name{
color: #fff;
margin-top: 40rpx;
font-size: 40rpx;
}
.user_btn{
   position: absolute;
   left: 50%;
   transform: translateX(-50%);
   top:40%;
   font-size: 30rpx;
   border: 1rpx solid greenyellow;
   padding: 40rpx;
}
.user_content{
position: relative;
}
.user_main{
position: absolute;
width: 90%;
left: 50%;
transform: translateX(-50%);
top:-40rpx;
}
.history_wrap{
background-color: #fff;
display: flex;
}
.history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his_num{
color: red;
}

.orders_wrap{
background-color: #fff;
margin-top: 30rpx;
}
.orders_title{
padding: 32rpx;
border-bottom: 1rpx solid #ccc;
}
.order_content{
 display: flex;
}
.order_content navigator{
 padding: 15rpx 0;
 flex: 1;
 text-align: center;
}
.iconfont{
color: red;
}
